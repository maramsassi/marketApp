<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffafa">




    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_bg_hover"
        >


        <ImageView
            android:id="@+id/profilPic"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/prifile_pic"
            android:layout_margin="20dp"
            android:layout_centerInParent="true"
            />





    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout1"
        android:id="@+id/relativeLayout">




        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Market Name"

            android:textColor="#565656"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="20dp"
            android:textSize="20dp"

            />
        <TextView
            android:id="@+id/marketname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nnn"
            android:layout_toRightOf="@id/tv1"
            android:layout_marginTop="20dp"
            android:layout_alignBaseline="@id/tv1"
            android:layout_marginBottom="10dp"
            android:paddingLeft="20dp"
            android:textSize="20dp"

            />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone number"

            android:layout_below="@id/tv1"
            android:textColor="#565656"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="20dp"
            android:textSize="20dp"

            />
        <TextView
            android:id="@+id/tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nnn"
            android:layout_toRightOf="@id/tv2"
            android:layout_marginTop="20dp"
            android:layout_alignBaseline="@id/tv2"
            android:layout_marginBottom="10dp"
            android:paddingLeft="20dp"
            android:textSize="20dp"

            />

        <LinearLayout
            android:id="@+id/locationL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/tv2"
            >

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Market Location"


                android:textColor="#565656"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="20dp"
                android:textSize="20dp"

                />
            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nnn"
                android:layout_toRightOf="@id/tv3"
                android:layout_marginTop="20dp"
                android:layout_alignBaseline="@id/tv3"
                android:layout_marginBottom="10dp"
                android:paddingLeft="20dp"
                android:textSize="20dp"
                android:layout_weight="1"

                />
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="60dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/pin"
                android:layout_alignBottom="@id/location"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
    </RelativeLayout>




</RelativeLayout>
